<div class="row">
  <div class="col-sm-8">
    <div class="card">
       <div class="card-block">
          
          <h4 class="card-title">
            <%=link_to "#{article.title}", article_path(article.id)%>
            <span class="label label-default"><%= article.count_views %> views</span>
          </h4>

            <p class="card-text"><%= @markdown.render(article.body).html_safe%></p>          
        </div>
        <div class="card-footer">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
        <%= link_to 'Show', article_path(article.id) , class: 'btn btn-primary' %> 
        <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger' %> 
   </div>
  </div>
</div>